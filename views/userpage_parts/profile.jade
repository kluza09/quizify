extends ../layout

block content
  #userpage
    .content
      .container
        .row
          .col-sm-10.col-sm-push-2
            h1= title
            h4 Nick: #{user.name}
            h4 Email: #{user.email}
            -if(user.desc)
              h4 O mnie: #{user.desc}
            hr
            h4 Dodaj opis:
            form(method="POST", action="/userpage/profile")
              input(type="hidden", name="_csrf", value=csrfToken)
              textarea(name="desc", placeholder="O mnie")
              input(type="submit", value="Dodaj")
              
  include ../partials/sidemenu
