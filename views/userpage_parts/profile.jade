extends ../layout

block content
  #userpage
    .container
      .row
        .col-sm-10.col-sm-push-2
          h1= title
          h4 Nick: #{global.CurrentUser.name}
          h4 Email: #{global.CurrentUser.email}
          -if(global.CurrentUser.desc)
            h4 O mnie: #{global.CurrentUser.desc}
          hr
          h4 Dodaj opis:
          form(method="POST", action="/userpage/profile")
            textarea(name="desc", placeholder="O mnie")
            input(type="submit", value="Dodaj")
              
  include ../partials/sidemenu
