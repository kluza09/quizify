extends layout

block content
  - func(questions.answer)
  section#quiz
    .container
      h1= title
      h2= questions.category
      h3= questions.questionContent
      -for(var i=0; i < 4; i++)
        .col-sm-6 
          p(value="#{questions.answer[i].id}" onclick="checkAnswer(#{questions.answer[i].id},#{questions.correctID},this)").normal-ans= questions.answer[i].answerContent
    
      a(href="/quizpage" display="none").next.col-xs-4.col-xs-push-4 NEXT
      
